<h1>Create City</h1>
<%= form_for @cities do |f| %>
  <div class="form-group">
    <label >Name of City :</label>
    <%= f.text_field :nom_ville %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create City</button>
  </div>
  <p><a href="<%=cities_path %>"class="btn btn-primary">Return To City</a></p>
<%end %>