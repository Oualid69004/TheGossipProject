<h1>Editer gossip</h1>
<%= form_for @gossips do |f| %>
  <div class="form-group">
    <label >Titre de gossip :</label>
    <%= f.text_field :titre, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >contenu de gossip :</label>
    <%= f.text_area :contenu, class:'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Edit gossip</button>
  </div>
  <p><a href="<%=gossips_path %>"class="btn btn-primary">Return To Gossips</a></p>
<%end %>