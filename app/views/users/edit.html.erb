<h1>Create Author</h1>
<%= form_for @users do |f| %>
  <div class="form-group">
    <label >First_Name_Author :</label>
    <%= f.text_field :prenom, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Last_Name_Author :</label>
    <%= f.text_field :nom, class:'form-control' %>
  </div>
  <div class="form-group">
    <label > Description Author :</label>
    <%= f.text_area :description, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Email_Author :</label>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Age_Author :</label>
    <%= f.text_field :age, class:'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Edit Author</button><br>


  </div>
  <p><a href="<%=users_path %>"class="btn btn-primary">Return To Authors</a></p>


<%end %>