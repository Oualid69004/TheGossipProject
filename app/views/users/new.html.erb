<h1>Create Author</h1>
<%= form_for @users do |f| %>
  <div class="form-group">
    <label >First_name :</label>
    <%= f.text_field :prenom, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Last_name :</label>
    <%= f.text_field :nom, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Description :</label>
    <%= f.text_area :description, class:'form-control' %>
  </div>
  <div class="form-group">
    <label > Email :</label>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class="form-group">
    <label >Age :</label>
    <%= f.text_field :age, class:'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Create gossip</button><br>


  </div>
  <p><a href="<%=users_path %>"class="btn btn-primary">Return To Author</a></p>


<%end %>